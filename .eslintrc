{
  "parser": "babel-eslint",
  "env": {
      "browser": true,
      "node": true,
      "jest": true
  },
  "extends": [
    "airbnb"
  ],
  "rules": {
    "indent": [2, 2],
    "react/jsx-indent": ["error", 2],
    "import/prefer-default-export": "off",
    "no-console": "off",
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true,
      "classes": true
    }
  }
}
